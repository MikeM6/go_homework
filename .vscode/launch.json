{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug main package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}", // 你的主包目录
            "cwd": "${workspaceFolder}",
            "env": {
                "GOPROXY": "https://goproxy.cn,direct",
                "GOSUMDB": "sum.golang.org"
            }
        },
        {
            "name": "Debug single test (file)",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}"
        }
    ]
}