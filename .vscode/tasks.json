{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Go: Run",
            "type": "shell",
            "command": "go run .",
            "group": "build",
            "problemMatcher": "$go"
        },
        {
            "label": "Go: Build",
            "type": "shell",
            "command": "go build -o bin/app.exe .",
            "group": "build",
            "problemMatcher": "$go"
        },
        {
            "label": "Go: Test",
            "type": "shell",
            "command": "go test ./... -v",
            "group": "test",
            "problemMatcher": "$go"
        }
    ]
}